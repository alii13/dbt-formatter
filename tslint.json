{
  "extends": [
    "tslint",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "ignore",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": {
          "objects": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "forin": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false
  }
}
